# Application Configuration
APP_NAME="Adaptive Question Recommendation System"
ENVIRONMENT=development
DEBUG=true
API_BASE_URL=http://localhost:8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/adaptive_questions
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Vector Database (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=questions

# Search Engine (Elasticsearch)
SEARCH_ENGINE_URL=http://localhost:9200

# LLM Service
LLM_API_URL=http://localhost:8080
LLM_API_KEY=your-llm-api-key
LLM_MODEL=llama3-70b
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Bandit Configuration
BANDIT_ALPHA=1.0
BANDIT_LAMBDA=0.01
EXPLORATION_RATIO=0.2
MIN_SUCCESS_RATE=0.6
MIN_COVERAGE=0.8

# IRT Configuration
IRT_LEARNING_RATE=0.1
IRT_MAX_ITERATIONS=100
IRT_CONVERGENCE_THRESHOLD=0.001