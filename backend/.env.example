# Database
DATABASE_URL=postgresql://username:password@localhost:5432/adaptive_question_system
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/adaptive_question_system_test

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Configuration
PRIMARY_LLM_PROVIDER=openai_gpt4
SECONDARY_LLM_PROVIDER=anthropic_claude_haiku
DAILY_LLM_BUDGET=100.0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Security
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Environment
ENVIRONMENT=development